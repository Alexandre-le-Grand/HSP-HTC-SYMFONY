{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mt-4" style="text-align: center">Mot de passe oublié</h1>
                <form method="post">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.email) }}
                    </div>
                    <button type="submit" class="btn btn-primary mt-4">Envoyer le lien de réinitialisation</button>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
