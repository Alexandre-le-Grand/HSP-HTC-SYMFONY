{% extends 'base.html.twig' %}

{% block title %} HSP - Menu {% endblock %}

{% block body %}
    <div class="container mt-4 text-center">
        <h1>Menu</h1>
        <hr class="my-4">
        <div class="row">
            {% if is_granted('ROLE_ADMIN') %}
                <div class="col-md-4" style="margin-left: 17%; display: block; text-align: center;">
                    <a href="utilisateur">
                        <img src="images/user_accounts.svg" alt="Comptes utilisateurs">
                        <h4>Comptes utilisateurs</h4>
                    </a>
                </div>
            {% endif %}
            <div class="col-md-4">
                <a href="conference">
                    <img src="images/conference.svg" alt="Conférences">
                    <h4>Conférences</h4>
                </a>
            </div>
            {% if is_granted('ROLE_ETUDIANT') or is_granted('ROLE_REPRESENTANT') %}
                <div class="col-md-4">
                    <a href="offre_emploi">
                        <img src="images/contract_icon.svg" alt="Offres d'emploi">
                        <h4>Offres d'emploi</h4>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="rendez_vous">
                        <img src="images/rdv.svg" alt="Rendez-vous">
                        <h4>Rendez-vous</h4>
                    </a>
                </div>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <div class="col-md-4" style="margin-top: 5%;  margin-left: 17%; display: block; text-align: center;">
                    <a href="amphitheatre">
                        <img src="images/amphitheater.svg" alt="Amphithéâtres">
                        <h4>Amphithéâtres</h4>
                    </a>
                </div>
                <div class="col-md-4" style="margin-top: 5%;">
                    <a href="type_offre">
                        <img src="images/contract_icon.svg" alt="Types d'offres">
                        <h4>Types d'offres</h4>
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
