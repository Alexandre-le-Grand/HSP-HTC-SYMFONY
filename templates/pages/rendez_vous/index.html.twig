{% extends 'base.html.twig' %}

{% block title %}HSP - Rendez-vous{% endblock %}

{% block datatable_styles %}
    {{ parent() }}
    <!-- Ajouter des styles spécifiques à DataTables si nécessaire -->
{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% if not rendezvous is empty %}
            <h1 style="text-align: center">Liste des rendez-vous</h1>
            <hr class="my-4">

            {% for message in app.flashes('success') %}
                <div class="alert alert-success mt-4">
                    {{ message }}
                </div>
            {% endfor %}

            <div class="count mt-4">
                <h4 style="color: #1aa990">
                    Nombre total de rendez-vous :
                    {{ rendezvous.getTotalItemCount }}
                </h4>
            </div>

            <table class="table table-hover" id="dataTable">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Date</th>
                    <th scope="col">Heure</th>
                    <th scope="col">Offre</th>
                    {% if is_granted('ROLE_REPRESENTANT') %}
                        <th scope="col"> Étudiant</th>
                        <th>Domaine d'étude</th>
                    {% endif %}
                    <th>Statut</th>
                    {% if is_granted('ROLE_ETUDIANT') %}
                        <th>Actions</th>
                    {% endif %}
                </tr>
                </thead>
                <tbody>
                {% for rendez_vous in rendezvous %}
                    <tr class="Default">
                        <th scope="row">{{ rendez_vous.id }}</th>
                        <td>{{ rendez_vous.date }}</td>
                        <td>{{ rendez_vous.heure }}</td>
                        <td>{{ rendez_vous.refOffre.titre }}</td>
                        {% if is_granted('ROLE_REPRESENTANT') %}
                            {% if rendez_vous.refEtudiant is defined %}
                                <td>{{ rendez_vous.refEtudiant.nom }} {{ rendez_vous.refEtudiant.prenom }}</td>
                                <td>{{ rendez_vous.refEtudiant.domaineetude }}</td>
                            {% else %}
                                <td>N/A</td>
                                <td>N/A</td>
                            {% endif %}
                        {% endif %}
                        <td>
                            {% if rendez_vous.statut is null %}
                                Attente de confirmation
                            {% elseif rendez_vous.statut == 0 %}
                                Refusé
                            {% elseif rendez_vous.statut == 1 %}
                                Confirmé
                            {% endif %}
                        </td>
                        <td data-roles="{{ app.user.roles|json_encode }}">
                            {% if is_granted('ROLE_ETUDIANT') %}
                                {% if rendez_vous.statut is null %}
                                    <a href="{{ path('confirmation_rendez_vous', {id: rendez_vous.id}) }}" class="btn btn-success">Confirmer le rendez-vous</a>
                                    <a href="{{ path('refus_rendez_vous', {id: rendez_vous.id}) }}" class="btn btn-danger">Refuser le rendez-vous</a>
                                {% elseif rendez_vous.statut == true %}
                                    <a href="{{ path('refus_rendez_vous', {id: rendez_vous.id}) }}" class="btn btn-danger">Refuser le rendez-vous</a>
                                {% elseif rendez_vous.statut == false %}
                                    <a href="{{ path('confirmation_rendez_vous', {id: rendez_vous.id}) }}" class="btn btn-success">Confirmer le rendez-vous</a>
                                {% endif %}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation d-flex justify-content-center mt-4">
                {{ knp_pagination_render(rendezvous) }}
            </div>
        {% else %}
            <h4>Il n'y a aucun rendez-vous prévu</h4>
        {% endif %}
    </div>
{% endblock %}

{% block datatable_scripts %}
    {{ parent() }}
    <!-- Initialisation de DataTables -->
    <script>
        $(document).ready(function() {
            // Génération des boutons d'action
            var columns = [
                { "data": "id" },
                { "data": "date" },
                { "data": "heure" },
                { "data": "refOffre.titre" },
                {% if is_granted('ROLE_REPRESENTANT') %}
                { "data": "refEtudiant.nom" },
                { "data": "refEtudiant.domaineetude" },
                {% endif %}
                { "data": "statut" },
                {
                    "data": null,
                    "render": function (data, type, row) {
                        var roles = $('#dataTable').find('td[data-roles]').data('roles');
                        var actions = "";

                        if (roles) {
                            var isEtudiant = roles.indexOf('ROLE_ETUDIANT') !== -1;
                            var isRepresentant = roles.indexOf('ROLE_REPRESENTANT') !== -1;

                            if (isEtudiant) {
                                if (row.statut === null) {
                                    actions += '<a href="' + Routing.generate("confirmation_rendez_vous", {id: row.id}) + '" class="btn btn-success">Confirmer le rendez-vous</a>';
                                    actions += '<a href="' + Routing.generate("refus_rendez_vous", {id: row.id}) + '" class="btn btn-danger">Refuser le rendez-vous</a>';
                                } else if (row.statut === true) {
                                    actions += '<a href="' + Routing.generate("refus_rendez_vous", {id: row.id}) + '" class="btn btn-danger">Refuser le rendez-vous</a>';
                                } else if (row.statut === false) {
                                    actions += '<a href="' + Routing.generate("confirmation_rendez_vous", {id: row.id}) + '" class="btn btn-success">Confirmer le rendez-vous</a>';
                                }
                            } else if (isRepresentant) {
                                // Ajoutez ici les actions spécifiques aux représentants si nécessaire
                            }
                        }
                        return actions;
                    }
                }
            ];

            // Création du DataTable après la génération des boutons
            var dataTable = $('#dataTable').DataTable({
                "columns": columns,
                "order": []  // Désactiver le tri par défaut
            });
        });
    </script>
{% endblock %}



